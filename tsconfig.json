{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./*"]
      }
    },
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}